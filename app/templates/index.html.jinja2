{% extends "base.html.jinja2" %}

{% block title %}Main{% endblock %}

{% block javascript %}
<script src="{{ url_for('static', filename='index.js') }}"></script>
{% endblock %}

{% block content %}
<div class="container" id="app">
  <div class="jumbotron">
    <h1 class="display-4">Bootstrap/Flask/Vue Demo</h1>
    <p class="lead">This is a demo app that manages favorite movies for users.</p>
  </div>
    <div class="form-group">
      <b>Name:</b>
      <input type="text" ref="name" autofocus class="form-control" v-model=name @keyup.enter="gotoUser">
    </div>
  <button class="btn btn-primary" @click="gotoUser">Continue</button>
</div>
{% endblock %}
